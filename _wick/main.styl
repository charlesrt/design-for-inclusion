fonts = "Avenir Next", Avenir, "Segoe UI", Roboto, "Helvetica Neue", sans-serif
riverside = hsl(#4C6A92)
nightriver = hsl(#1C2736)
duskriver = hsl(#384E6B)
dayriver = hsl(#ADBBCD)
whitewater = hsl(#F8FAFC)
font-large = 3rem
font-medium = 2rem
font-normal = 1.5rem
font-small = 1rem

body
  font: 400 font-normal / 1.5 fonts
  color: nightriver
  background-color: whitewater
  border-top: 2px solid riverside
  margin: 0
  padding: 0 16px
  text-size-adjust: 100%
  font-feature-settings: "kern" 1
  font-kerning: normal

h1
  font-weight: 700
  font-size: font-large
  line-height: 1
  margin: 3rem 0
  text-align: left
  // text-transform: uppercase
  width: 50%

h2
  font-weight: 700
  font-size: font-medium
  margin: 0

ul
  margin: 0
  padding: 0

p
  margin: 16px 0

hr
  border: none
  border-top: 1px solid dayriver
  margin: 8px 0

blockquote
  font-size: font-normal
  font-weight: 700
  margin: 0
  padding: 32px 0
  text-align: left

footer
  font-size: font-small
  font-weight: 400
  color: whitewater

footer a
  background: nightriver
  color: inherit
  text-decoration: none

footer a:hover
  background: whitewater
  color: nightriver

.quote
  background: riverside
  color: whitewater

.full-width
  border-top: 2px solid nightriver
  margin: 1rem -1rem
  padding: 0 16px 0 16px

nav.full-width
  background: riverside
  margin: 1rem -1rem 0 -1rem
  padding-bottom: 16px

.card-row
  display: flex

.card
  flex: 1
  margin-right: 16px

.card:last-child
  margin-right: 0

.container
  max-width: 960px
  margin: 0 auto

.dont
  font-weight: 400
  color: riverside

.heading-secondary
  font-size: font-small
  font-weight: 400
  line-height: 1.5
  color: riverside
  display: block

.heading-meta
  border: 2px solid currentColor
  display: inline-block
  font-size: font-small
  font-weight: 700
  margin-bottom: 0
  margin-top: 16px
  padding: 8px
  // text-transform: uppercase

.tile
  list-style-type: none
  margin: 16px 16px 0 0
  background: whitewater
  border-bottom: 2px solid nightriver
  // text-transform: uppercase

.tile a
  padding: 16px
  text-decoration: none
  background: none
  color: inherit
  line-height: 1
  font-size: font-normal
  font-weight: 700
  display: block

.tile:hover
  background: nightriver

.tile:hover a span
  color: dayriver

.tile:hover a
  color: whitewater

@media screen and (max-width: 736px)

  .card-row, .card
    display: inline-block
    width: 100%
